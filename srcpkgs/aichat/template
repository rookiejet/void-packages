# Template file for 'aichat'
pkgname=aichat
version=0.30.0
revision=1
build_style=cargo
makedepends="pkg-config oniguruma-devel"
short_desc="All-in-one AI CLI tool featuring Shell Assistant, Chat-REPL, RAG, AI Tools & Agents"
maintainer="rookiejet <void@illumed.net>"
license="Apache-2.0, MIT"
homepage="https://github.com/sigoden/aichat"
changelog="https://github.com/sigoden/aichat"
distfiles="https://github.com/sigoden/aichat/archive/v${version}.tar.gz"
checksum=e194cc89afc213a6e3169738221cae641c347421c4f2aacd5d6f4f7cc6edb387

do_install() {
	vbin target/"$RUST_TARGET"/release/aichat

	for shell in bash fish zsh; do
		vcompletion scripts/completions/aichat.$shell $shell
	done

	vcopy scripts/shell-integration usr/share/aichat

	vdoc README.md
}
